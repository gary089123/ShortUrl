<body class="text-center">

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <%=flash_messages %>
  <header class="masthead mb-auto">
    <div class="inner">
      <h3 class="masthead-brand">Little's ShortUrl</h3>
      <nav class="nav nav-masthead justify-content-center">
        <a class="nav-link active" href="#">Home</a>
        <a class="nav-link" href="#">Features</a>
        <a class="nav-link" href="#">Contact</a>
      </nav>
    </div>
  </header>

  <main role="main" class="inner cover">
    <h1 class="cover-heading">小小的短網址 (´･ω･`)</h1>
    <%= form_for @url, :url => {:controller => 'url', :action => 'create'} do |f| %>
      <div class="form-group">

        <%= f.text_field :origin, :class => "form-control", :style => "text-align:center;", placeholder: "Example : https://url.little.tw" %>
      </div>
      <div class="form-group">
        <%= f.label :redirect, '短網址' %>
        <%= f.text_field :redirect %>
      </div>
      <div class="form-group">
        <%= f.submit '產生短網址', :class => 'btn btn-lg btn-secondary' %>
      </div>
    <% end %>
    </p>
  </main>

  <footer class="mastfoot mt-auto">
    <div class="inner">
      <p>Cover template for <a href="https://getbootstrap.com/">Bootstrap</a>, by
        <a href="https://twitter.com/mdo">@mdo</a>.</p>
    </div>
  </footer>
</div>


